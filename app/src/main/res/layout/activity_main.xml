<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1d1d26"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="#7d7d7d"
        android:textSize="30sp"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <TextView
                android:id="@+id/c_btn"
                style="@style/fun_btn"
                android:text="C">
            </TextView>
            <TextView
                android:id="@+id/open_btn"
                style="@style/fun_btn"
                android:text="(">
            </TextView>
            <TextView
                android:id="@+id/close_btn"
                style="@style/fun_btn"
                android:text=")">
            </TextView>
            <TextView
                android:id="@+id/delenie_btn"
                style="@style/fun_btn"
                android:text="/">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/btn_7"
                style="@style/number_btn"
                android:text="7">
            </TextView>
            <TextView
                android:id="@+id/btn_8"
                style="@style/number_btn"
                android:text="8">
            </TextView>
            <TextView
                android:id="@+id/btn_9"
                style="@style/number_btn"
                android:text="9">
            </TextView>
            <TextView
                android:id="@+id/miltiply_btn"
                style="@style/fun_btn"
                android:text="*">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/btn_4"
                style="@style/number_btn"
                android:text="4">
            </TextView>
            <TextView
                android:id="@+id/btn_5"
                style="@style/number_btn"
                android:text="5">
            </TextView>
            <TextView
                android:id="@+id/btn_6"
                style="@style/number_btn"
                android:text="6">
            </TextView>
            <TextView
                android:id="@+id/minus_btn"
                style="@style/fun_btn"
                android:text="-">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/btn_1"
                style="@style/number_btn"
                android:text="1">
            </TextView>
            <TextView
                android:id="@+id/btn_2"
                style="@style/number_btn"
                android:text="2">
            </TextView>
            <TextView
                android:id="@+id/btn_3"
                style="@style/number_btn"
                android:text="3">
            </TextView>
            <TextView
                android:id="@+id/plus_btn"
                style="@style/fun_btn"
                android:text="+">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/zpt_btn"
                style="@style/number_btn"
                android:text=",">
            </TextView>
            <TextView
                android:id="@+id/btn_0"
                style="@style/number_btn"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/back_btn"
                style="@style/number_btn"
                android:text="âŠ²">
            </TextView>
            <TextView
                android:id="@+id/result_btn"
                style="@style/result_btn"
                android:text="=">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>